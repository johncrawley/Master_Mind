<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TurboMasterMind" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/disabled_button</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/clue_cow</item>
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/background_top</item>
        <item name="option_button_background">@color/background_top</item>

        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:fitsSystemWindows">false</item>
        <item name="android:windowLightStatusBar">false</item>

        <item name="info_icon">@drawable/ic_info</item>
        <item name="new_game_icon">@drawable/ic_new_game</item>
        <item name="undo_icon">@drawable/ic_undo</item>
        <item name="background_color">@color/background_top</item>

        <item name="main_background_top_color">@color/background_top</item>
        <item name="main_background_bottom_color">@color/background_bottom</item>

        <item name="panel_background_top_color">@color/panel_background_top</item>
        <item name="panel_background_bottom_color">@color/panel_background_bottom</item>

        <item name="row_color">@color/row_background</item>
        <item name="highlighted_row_color">@color/highlighted_row_background</item>

        <item name="input_button_surround">@color/input_button_surround</item>
        <item name="input_button_surround_2">@color/input_button_surround_2</item>

        <item name="game_grid_background">@color/game_grid_background</item>

        <item name="panel_background">@color/panel_background</item>
        <item name="panel_edge">@color/panel_edge</item>
        <item name="panel_text">@color/panel_text</item>
        <item name="panel_text_shadow">@color/panel_text_shadow</item>
        <item name="clue_tip_text">@color/clue_tip_text</item>
        <item name="solution_background">@color/solution_background</item>
        <item name="popup_background">@color/popup_background</item>
    </style>
</resources>