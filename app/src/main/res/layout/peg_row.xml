<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingVertical="@dimen/_8sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <include
        layout="@layout/peg_layout"
        android:id="@+id/peg_1"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="@dimen/_4sdp"
        app:layout_constraintWidth_percent=".9"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/peg_2"
        app:layout_constraintDimensionRatio="1:1"
        />

    <include
        layout="@layout/peg_layout"
        android:id="@+id/peg_2"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="@dimen/_4sdp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/peg_1"
        app:layout_constraintEnd_toStartOf="@id/peg_3"
        app:layout_constraintDimensionRatio="1:1"
        />

    <include
        layout="@layout/peg_layout"
        android:id="@+id/peg_3"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="@dimen/_4sdp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/peg_2"
        app:layout_constraintEnd_toStartOf="@id/peg_4"
        app:layout_constraintDimensionRatio="1:1"/>

    <include
        layout="@layout/peg_layout"
        android:id="@+id/peg_4"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="@dimen/_4sdp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/peg_3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintDimensionRatio="1:1" />


</androidx.constraintlayout.widget.ConstraintLayout>