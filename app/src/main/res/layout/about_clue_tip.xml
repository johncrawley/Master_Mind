<?xml version="1.0" encoding="utf-8"?>

<app:LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="horizontal">

<include android:id="@+id/clueExample"
    layout="@layout/clue"
    android:layout_width="20dp"
    android:layout_height="20dp"
    android:layout_margin="@dimen/peg_layout_margin"
    android:paddingStart="0dp"
    android:paddingEnd="0dp"
    />

<TextView
    android:id="@+id/clueTipText"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textSize="@dimen/clue_tip_text_size"
    android:textColor="@color/clue_tip_text"
    android:text="@string/clues_tip_green"/>

</app:LinearLayout>