<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/buttonLayout">

    <LinearLayout
        android:weightSum="10"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/redButton"
            android:backgroundTint="@color/game_red"
            android:layout_width="@dimen/button_width"
            android:layout_height="@dimen/button_height"
            app:cornerRadius="@dimen/color_button_corner"
            android:layout_margin="@dimen/color_button_margin"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:scaleType="centerInside" />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/blueButton"
            android:backgroundTint="@color/game_blue"
            android:layout_width="@dimen/button_width"
            android:layout_height="@dimen/button_height"
            app:cornerRadius="@dimen/color_button_corner"
            android:layout_margin="@dimen/color_button_margin"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:scaleType="centerInside" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/greenButton"
            android:backgroundTint="@color/game_green"
            android:layout_width="@dimen/button_width"
            android:layout_height="@dimen/button_height"
            app:cornerRadius="@dimen/color_button_corner"
            android:layout_margin="@dimen/color_button_margin"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:scaleType="centerInside" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/yellowButton"
            android:backgroundTint="@color/game_yellow"
            android:layout_width="@dimen/button_width"
            android:layout_height="@dimen/button_height"
            app:cornerRadius="@dimen/color_button_corner"
            android:layout_margin="@dimen/color_button_margin"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:scaleType="centerInside" />
    </LinearLayout>

    <LinearLayout
        android:weightSum="10"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/brownButton"
            android:backgroundTint="@color/game_brown"
            android:layout_width="@dimen/button_width"
            android:layout_height="@dimen/button_height"
            app:cornerRadius="@dimen/color_button_corner"
            android:layout_margin="@dimen/color_button_margin"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:scaleType="centerInside" />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/orangeButton"
            android:backgroundTint="@color/game_orange"
            android:layout_width="@dimen/button_width"
            android:layout_height="@dimen/button_height"
            app:cornerRadius="@dimen/color_button_corner"
            android:layout_margin="@dimen/color_button_margin"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:scaleType="centerInside" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/pinkButton"
            android:backgroundTint="@color/game_pink"
            android:layout_width="@dimen/button_width"
            android:layout_height="@dimen/button_height"
            app:cornerRadius="@dimen/color_button_corner"
            android:layout_margin="@dimen/color_button_margin"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:scaleType="centerInside" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/purpleButton"
            android:backgroundTint="@color/game_purple"
            android:layout_width="@dimen/button_width"
            android:layout_height="@dimen/button_height"
            app:cornerRadius="@dimen/color_button_corner"
            android:layout_margin="@dimen/color_button_margin"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:scaleType="centerInside" />
    </LinearLayout>

</LinearLayout>
