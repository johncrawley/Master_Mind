<resources xmlns:tools="http://schemas.android.com/tools">

        <style name="Theme.TurboMasterMind" parent="Theme.Material3.DayNight.NoActionBar">
            <!-- Primary brand color. -->
            <item name="colorPrimary">@color/purple_200</item>
            <item name="colorPrimaryVariant">@color/purple_700</item>
            <item name="colorOnPrimary">@color/clue_tip_text</item>
            <!-- Secondary brand color. -->
            <item name="colorSecondary">@color/teal_200</item>
            <item name="colorSecondaryVariant">@color/teal_200</item>
            <item name="colorOnSecondary">@color/clue_cow</item>
            <!-- Customize your theme here. -->
            <item name="android:statusBarColor">@android:color/transparent</item>
            <item name="android:windowTranslucentStatus">true</item>
            <item name="android:fitsSystemWindows">false</item>
            <item name="android:windowLightStatusBar">true</item>

            <item name="info_icon">@drawable/ic_info_light</item>
            <item name="new_game_icon">@drawable/ic_new_game_light</item>
            <item name="undo_icon">@drawable/ic_undo_light</item>
            <item name="background_color">@color/background_light</item>

            <item name="row_color">@color/row_background_light</item>
            <item name="highlighted_row_color">@color/highlighted_row_background_light</item>

            <item name="input_button_surround">@color/input_button_surround_light</item>
            <item name="input_button_surround_2">@color/input_button_surround_2_light</item>

            <item name="game_grid_background">@color/game_grid_background_light</item>

            <item name="panel_background">@color/panel_background_light</item>
            <item name="panel_edge">@color/panel_edge_light</item>
            <item name="panel_text">@color/panel_text_light</item>
            <item name="panel_text_shadow">@color/panel_text_shadow_light</item>
            <item name="clue_tip_text">@color/clue_tip_text_light</item>
            <item name="solution_background">@color/solution_background_light</item>
            <item name="popup_background">@color/popup_background_light</item>
        </style>
    </resources>